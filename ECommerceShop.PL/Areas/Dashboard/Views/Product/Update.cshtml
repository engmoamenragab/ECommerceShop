@model ECommerceShop.BL.ViewModels.ProductVM
@{
    ViewData["Title"] = "Update";
}

<form asp-area="Dashboard" asp-controller="Product" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Name">Name</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="text" asp-for="Name" />
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Description">Description</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="text" asp-for="Description" />
            <span class="alert-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Color">Color</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="text" asp-for="Color" />
            <span class="alert-danger" asp-validation-for="Color"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Size">Size</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="number" asp-for="Size" />
            <span class="alert-danger" asp-validation-for="Size"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Price">Price</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="number" asp-for="Price" />
            <span class="alert-danger" asp-validation-for="Price"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="Quantity">Quantity</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="number" asp-for="Quantity" />
            <span class="alert-danger" asp-validation-for="Quantity"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-12 col-form-label" asp-for="ProductUser">ProductUser</label>
        <div class="col-sm-12 col-md-10">
            <input class="form-control" type="text" asp-for="ProductUser" />
            <span class="alert-danger" asp-validation-for="ProductUser"></span>
        </div>
    </div>
    <a class="btn btn-danger" asp-area="Dashboard" asp-controller="Product" asp-action="Index">Cancel</a>
    <button class="btn btn-success" type="submit">Update Product</button>
</form>

