@model ECommerceShop.BL.ViewModels.CustomerVM
@{
    ViewData["Title"] = "Read Customer";
}

<div class="min-height-200px">
    <div class="page-header">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="title">
                    <h4>Customer Details</h4>
                </div>
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Customer" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Customer Details</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="product-wrap">
        <div class="product-detail-wrap mb-30">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="product-detail-desc pd-20 card-box height-100-p">
                        <h4 class="mb-20 pt-20">Name: @Model.Name</h4>
                        <p>Address: @Model.Address</p>
                        <p>Phone: @Model.Phone</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

